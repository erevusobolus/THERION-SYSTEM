{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "üöÄ THERION: Start Development Server",
            "type": "shell",
            "command": "npm",
            "args": [
                "run",
                "dev"
            ],
            "options": {
                "cwd": "${workspaceFolder}/EREBUS-Website"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "isBackground": true,
            "problemMatcher": "$tsc-watch"
        },
        {
            "label": "‚ö° THERION: Build Production",
            "type": "shell",
            "command": "npm",
            "args": [
                "run",
                "build"
            ],
            "options": {
                "cwd": "${workspaceFolder}/EREBUS-Website"
            },
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": "$tsc"
        },
        {
            "label": "üîç THERION: Type Check",
            "type": "shell",
            "command": "npx",
            "args": [
                "tsc",
                "--noEmit"
            ],
            "options": {
                "cwd": "${workspaceFolder}/EREBUS-Website"
            },
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": "$tsc"
        },
        {
            "label": "üßπ THERION: Lint Code",
            "type": "shell",
            "command": "npx",
            "args": [
                "eslint",
                ".",
                "--ext",
                ".ts,.tsx,.js,.jsx",
                "--fix"
            ],
            "options": {
                "cwd": "${workspaceFolder}/EREBUS-Website"
            },
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": "$eslint-stylish"
        },
        {
            "label": "üíé THERION: Format Code",
            "type": "shell",
            "command": "npx",
            "args": [
                "prettier",
                "--write",
                "."
            ],
            "options": {
                "cwd": "${workspaceFolder}/EREBUS-Website"
            },
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }
        },
        {
            "label": "üì¶ THERION: Install Dependencies",
            "type": "shell",
            "command": "npm",
            "args": [
                "install"
            ],
            "options": {
                "cwd": "${workspaceFolder}/EREBUS-Website"
            },
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }
        },
        {
            "label": "üîÑ THERION: Clean and Reinstall",
            "type": "shell",
            "command": "rm",
            "args": [
                "-rf",
                "node_modules",
                "package-lock.json",
                "&&",
                "npm",
                "install"
            ],
            "options": {
                "cwd": "${workspaceFolder}/EREBUS-Website"
            },
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }
        },
        {
            "label": "üêç THERION: Python Virtual Environment",
            "type": "shell",
            "command": "python3",
            "args": [
                "-m",
                "venv",
                "venv"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }
        },
        {
            "label": "üß™ THERION: Run Python Tests",
            "type": "shell",
            "command": "python3",
            "args": [
                "-m",
                "pytest",
                "-v"
            ],
            "options": {
                "cwd": "${workspaceFolder}",
                "env": {
                    "PYTHONPATH": "${workspaceFolder}"
                }
            },
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": "$python"
        },
        {
            "label": "‚öîÔ∏è THERION: System Information",
            "type": "shell",
            "command": "system_profiler",
            "args": [
                "SPHardwareDataType",
                "SPSoftwareDataType"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }
        }
    ]
}